<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:id="@+id/profileFrame"
    android:orientation="vertical">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center">


        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:text=" YOUR PROFILE"
            android:textColor="@android:color/background_dark"
            android:textSize="32sp" />

        <View
            android:id="@+id/v1"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@id/t1"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="18dp"
            android:background="@android:color/holo_red_light" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:layout_below="@id/v1">

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/gmail"/>
        <TextView
            android:id="@+id/n1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="75dp"

            android:text="EMAIL" />

        <TextView
            android:id="@+id/display_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/n1"
            android:layout_marginStart="75dp"
            android:text="ABCD"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/display_Email"
                android:layout_alignParentStart="true"
                android:background="@drawable/name"/>
        <TextView
            android:id="@+id/n2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/display_Email"
            android:layout_marginStart="75dp"
            android:text="NAME" />

        <TextView
            android:id="@+id/display_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/n2"
            android:layout_marginStart="75dp"
            android:text="ABCD"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/display_Name"
                android:layout_alignParentStart="true"
                android:background="@drawable/number"/>

        <TextView

            android:id="@+id/n3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/display_Name"
            android:layout_marginTop="10dp"
            android:layout_marginStart="75dp"
            android:text="MOBILE NUMBER" />

        <TextView
            android:id="@+id/display_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/n3"
            android:layout_marginStart="75dp"
            android:text="Mobile Number"
            android:textColor="@android:color/black"
            android:textSize="20sp" />
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/display_mobile"
                android:layout_alignParentStart="true"
                android:background="@drawable/gender"/>

        <TextView
            android:id="@+id/n4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/display_mobile"
            android:layout_marginTop="10dp"
            android:layout_marginStart="75dp"
            android:text="GENDER" />

        <TextView
            android:id="@+id/display_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/n4"
            android:layout_marginStart="75dp"
            android:text="Gender"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        </RelativeLayout>
        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="22dp"
            android:text="@string/edit"
            android:layout_alignParentStart="true"
            android:background="@drawable/buttonstyle"/>

    </RelativeLayout>

</FrameLayout>